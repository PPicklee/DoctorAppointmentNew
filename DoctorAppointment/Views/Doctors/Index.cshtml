@model IEnumerable<DoctorAppointment.Models.Doctors>

@{
    ViewData["Title"] = "Doctors List";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Edit" asp-route-id="@item.DoctorsId">Edit</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Details" asp-route-id="@item.DoctorsId">Details</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Delete" asp-route-id="@item.DoctorsId">Delete</a>
                }
             </td>
        </tr>
}
    </tbody>
</table>
